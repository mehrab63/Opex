@page
@model Opex.Pages.FinancialBalance.CreateModel

@{
    ViewData["Title"] = "Create";
}
<input type="hidden" id="selectedTab" value="payment" />
<div class="tab-content">
    <div class="tab-pane" id="payment">
        <div class="col-sm-10 col-sm-offset-1 " style="margin-top:25px">
            <div class="row">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                    <label for="address">توان تجهیزاتی</label>
                    <span>(فهرست ماشین‌آلات و تجهیزات تولیدی)</span>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom04">نام ماشین‌آلات و تجهیزات</label>
                            <input asp-for="TblFinancialBalance.EquipmentName" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.EquipmentName" class="text-danger"></span>
                            <div class="invalid-feedback"> موارد  را با خط  فاصله  (-)از هم جدا کنید</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom04">شرح مشخصات و مدت‌زمان کارکرد</label>
                            <input asp-for="TblFinancialBalance.EquipmentDisp" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.EquipmentDisp" class="text-danger"></span>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="validationCustom04">تعداد</label>
                            <input onkeypress="javascript:return isNumber(event)" style="direction:ltr" maxlength="4" asp-for="TblFinancialBalance.EquipmentQuantity" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.EquipmentQuantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationCustom04">ملکی/استیجاری</label>
                            <input asp-for="TblFinancialBalance.EquipmentOwnerType" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.EquipmentOwnerType" class="text-danger"></span>

                        </div>
                    </div>
                    <hr />
                    <label for="address">توان مالی شرکت در 5 سال گذشته</label>
                    <span>(جدول 1-3)</span>
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <label for="validationCustom04">سال</label>
                            <input onkeypress="javascript:return isNumber(event)" style="direction:ltr" maxlength="4" asp-for="TblFinancialBalance.AffordabilityYear" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.AffordabilityYear" class="text-danger"></span>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationCustom04">کل محصول صادرشده (تن / بشکه)</label>
                            <input asp-for="TblFinancialBalance.TotalExportProduct5Year" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.TotalExportProduct5Year" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationCustom04">مبلغ صادراتی ارزی</label>
                            <input asp-for="TblFinancialBalance.ExprotCurencyPrice" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.ExprotCurencyPrice" class="text-danger"></span>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationCustom04">مبلغ صادراتی ریالی</label>
                            <input asp-for="TblFinancialBalance.ExportRialPrice" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.ExportRialPrice" class="text-danger"></span>
                            <div class="invalid-feedback"> </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <label for="validationCustom04">سال</label><span>(بیمه)</span>
                            <input onkeypress="javascript:return isNumber(event)" style="direction:ltr" maxlength="4" asp-for="TblFinancialBalance.InsuranceYear" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.InsuranceYear" class="text-danger"></span>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <div class="col-md-5 mb-3">
                            <label for="validationCustom04">
                                کل مبلغ بیمه تأمین اجتماعی پرداخت‌شده
                            </label>
                            <input onkeypress="javascript:return isNumber(event)" style="direction:ltr" maxlength="12" asp-for="TblFinancialBalance.TotalInsurance" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.TotalInsurance" class="text-danger"></span>
                            <div class="invalid-feedback">
                                قطعی یا علی‌الحساب (میلیون ريال)
                            </div>
                        </div>
                        <div class="col-md-5 mb-3">
                            <label for="validationCustom04">
                                کل مبلغ مالیات پرداختی
                            </label>
                            <input onkeypress="javascript:return isNumber(event)" style="direction:ltr" maxlength="12" asp-for="TblFinancialBalance.TotalTaxPayment" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.TotalTaxPayment" class="text-danger"></span> <div class="invalid-feedback">
                                قطعی یا علی‌الحساب (میلیون ريال)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-name">مجموعه تناژ صادراتی طی یک سال گذشته:</label>
                            <input asp-for="TblFinancialBalance.TotalExportYear" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.TotalExportYear" class="text-danger"></span>
                            <small class="text-muted"></small>
                            <div class="invalid-feedback">
                                تناژ
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cc-number">
                                فرآورده‌های صادراتی به ترتیب میزان صادرات:
                            </label>
                        </div>
                        <div class="col-md-2 mb-3">
                            <input asp-for="TblFinancialBalance.ExportDegree1" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.ExportDegree1" class="text-danger"></span>
                            <div class="invalid-feedback">

                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <input asp-for="TblFinancialBalance.ExportDegree2" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.ExportDegree2" class="text-danger"></span>
                            <div class="invalid-feedback">

                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <input asp-for="TblFinancialBalance.ExportDegree3" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.ExportDegree3" class="text-danger"></span>
                            <div class="invalid-feedback">

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration"> ارزش صادراتی ریالی:</label>
                            <input asp-for="TblFinancialBalance.ExportValueRial" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.ExportValueRial" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">ارزش صادراتی ارزی:</label>
                            <input asp-for="TblFinancialBalance.ExportValueCurency" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.ExportValueCurency" class="text-danger"></span>
                            <div class="invalid-feedback">
                                واحد ارزی
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cc-expiration">سایر فرآورده‌ها:</label>
                            <input asp-for="TblFinancialBalance.OtherProduct" class="form-control" />
                            <span asp-validation-for="TblFinancialBalance.OtherProduct" class="text-danger"></span>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <div class="row">
                        <p>
                            <span class="invalid-feedback">
                                در صورت در اختیار
                                داشتن واحد تولیدی ثبت کنید
                            </span>
                        </p>
                        <div class=" " id="example">
                            <h4>فرآورده‌های تولیدی:</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="cc-expiration">
                                        مجموع تناژ تولیدی یک سال :
                                    </label>
                                    <input asp-for="TblFinancialBalance.TotalProductYear" class="form-control" />
                                    <span asp-validation-for="TblFinancialBalance.TotalProductYear" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="cc-expiration">
                                        ظرفیت اسمی محصولات مندرج در پروانه بهره‌برداری:
                                    </label>
                                    <input asp-for="TblFinancialBalance.NamedProductCapacity" class="form-control" />
                                    <span asp-validation-for="TblFinancialBalance.NamedProductCapacity" class="text-danger"></span>
                                    <div class="invalid-feedback" style="color:red;margin-top:5px">
                                        (تصویر پروانه بهر برداری پیوست شود)
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="cc-expiration">ظرفیت عملیاتی محصولات بر اساس پروانه بهره‌برداری:</label>
                                    <input asp-for="TblFinancialBalance.OperationalProductCapacity" class="form-control" />
                                    <span asp-validation-for="TblFinancialBalance.OperationalProductCapacity" class="text-danger"></span>
                                    <div class="invalid-feedback" style="color:red;margin-top:5px">
                                        (طبق جدول تنظیم‌شده از سوی آن شرکت بر روی سربرگ شرکت پیوست شود)
                                    </div>
                                </div>
                            </div>
                            <hr />
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-2 col-sm-offset-5">
                            <input type="submit" class="btn btn-wd btn-primary btn-block" value="ذخیره" />
                        </div>
                        <div class="form-group">
                            <a asp-page="./Index">بازگشت</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Footer{
    <div class="wizard-footer">
        <div class="clearfix"></div>
    </div>

}
@section Scripts{
    <!--   Core JS Files   -->
    <script src="/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>
    <script src="/js/register.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!--  Plugin for the Wizard -->
    <script src=" /js/demo.js" type="text/javascript"></script>
    <script src=" /js/paper-bootstrap-wizard.js" type="text/javascript"></script>

    <!--  More information about jquery.validate here: https://jqueryvalidation.org/	 -->
    <script src=" /js/jquery.validate.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#wizard').bootstrapWizard('show', 2);

        });
    </script>
}
