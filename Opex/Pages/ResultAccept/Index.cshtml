@page
@model Opex.Pages.ResultAccept.AcceptModel
@{
    ViewData["Title"] = "وضعیت پرونده";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<input type="hidden" id="selectedTab" value="verify1" />
<div class="tab-pane" id="verify1">
    <div class="col-md-12" style="margin-top:85px">
        <h2>وضعیت پرونده</h2>

        @if (@Model.ParvandeState != null)
        {
            <div class="alert alert-info">
                <p> پرونده صنفی شما در وضعیت: <strong>@Model.ParvandeState</strong> قرار گرفته است. </p>
            </div>
            <h4>توضیحات:</h4>
            <div class="alert alert-warning">

                <p>@Html.Raw(Model.Description)</p>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p>پرونده صنفی شما در حال بررسی می باشد.</p>
            </div>
        }
    </div>
    
</div>

@section Footer{
    @if (@Model.ParvandeState == "پرونده تائيد شده ي ثبت نام آنلاين" || @Model.ParvandeState == "فعال(صادره)")
    {
        <div class="pull-right">
            <a class='btn btn-next btn-fill btn-danger btn-wd' asp-page="/Payments/Index">مرحله بعدی</a>

        </div>
        <div class="pull-left">
            <a asp-page="/RequestVerify/Index" class='btn btn-previous btn-default btn-wd' name='Previous'>مرحله قبلی</a>
        </div>
    }
    else
    {
        <div class=" text-center alert text-danger">
            <strong>
                <span>پرونده شما از طرف اتحادیه در حال بررسی است.</span>
                <span>جهت ادامه منتظر تایید اتحادیه باشید.</span>
                <span>با تشکر.</span>
            </strong>
        </div>
        <div class="pull-left">
            <a asp-page="/RequestVerify/Index" class='btn btn-previous btn-default btn-wd' name='Previous'>مرحله قبلی</a>
        </div>
    }

    <div class="clearfix"></div>
}


