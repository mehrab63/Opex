@page
@model Opex.Pages.RequestVerify.RequestVerifyModel
@{
    ViewData["Title"] = "تائیدیه درخواست";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<input type="hidden" id="selectedTab" value="description" />
<div class="tab-pane" id="description">
    <div class="col-md-12" style="margin-top:85px">
        <h2>تائیدیه درخواست</h2>
        <hr />
        <div class="row">
            <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
                <div class="well"> 
                    <div class="col-sm-12">
                        <div class="col-xs-12 col-sm-8">
                            <h2>@Model.FullName</h2>
                            <p class="alert-info"><strong >کد رهگیری شما:</strong> <strong  >@Model.SystemCode</strong> </p>
                            <p>
                                <strong>تاریخ درخواست:</strong>
                                <span class="tags"><strong> @Model.CreateDate</strong></span>
                            </p>
                            <p><strong> توضیحات: </strong> درخواست شما در سیستم ثبت شده است </p>

                        </div>
                        <div class="col-xs-12 col-sm-4 text-center">
                            <figure>
                                <img src="~/img/logo.png" alt="" class="img-circle img-responsive">
                                <figcaption class="ratings">
                                    <p>
                                        اتحادیه صادرکنندگان فرآورده های نفت، گاز و پتروشیمی ایران
                                    </p>
                                </figcaption>
                            </figure>
                        </div>
                    </div>
                    <p class="text-center"><span>Iranian Oil ,Gas and Petrochemical Products Exporters' Union</span></p>
                </div>
            </div>
        </div>
        <hr />  
    </div>
</div> 
@section Footer{

    <div class="pull-right">

        <a class='btn btn-next btn-fill btn-danger btn-wd' asp-page="/ResultAccept/Index">مرحله بعدی</a>

    </div>
    <div class="pull-left">
        <a asp-page="/Binarys/Index" class='btn btn-previous btn-default btn-wd' name='Previous'>مرحله قبلی</a>
    </div>
    <div class="clearfix"></div>
}
@section Scripts{
    <!--   Core JS Files   -->
    <script src="/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>
    <script src="/js/register.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!--  Plugin for the Wizard -->
    <script src=" /js/demo.js" type="text/javascript"></script>
    <script src=" /js/paper-bootstrap-wizard.js" type="text/javascript"></script>

    <!--  More information about jquery.validate here: https://jqueryvalidation.org/	 -->
    <script src=" /js/jquery.validate.min.js" type="text/javascript"></script>
    <script>

        $(document).ready(function () {
            var first = $('#selectedTab').val();
            var mid = $('#selectedTab').val();
            if (first == "rquest-type") {
                $('#wizard').bootstrapWizard('show', 1);
            }
            else {
                $('#wizard').bootstrapWizard('show', 0);
            }
            switch (mid) {
                case "type":
                    $('#wizard').bootstrapWizard('show', 0);
                    break;

                case "facilities":
                    $('#wizard').bootstrapWizard('show', 1);
                    break;
                case "payment":
                    $('#wizard').bootstrapWizard('show', 2);
                    break;
                case "question":
                    $('#wizard').bootstrapWizard('show', 3);
                    break;
                case "upload":
                    $('#wizard').bootstrapWizard('show', 4);
                    break;
                case "description":
                    $('#wizard').bootstrapWizard('show', 5);
                    break;
                case "Verify1":
                    $('#wizard').bootstrapWizard('show', 6);
                    break;
            }
        });

    </script>
}