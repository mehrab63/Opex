@page
@model Opex.Pages.Binarys.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<input type="hidden" id="selectedTab" value="upload" />
<div class="tab-pane" id="upload">
    <div class="col-md-12" style="margin-top:85px">
        <h2>ویرایش مدارک</h2>
        <hr />
        <h4>ویراش مدرک: <strong class="font-italic">@Model.tblBinarys.Subject</strong></h4>
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <form method="post" enctype="multipart/form-data"> 
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="tblBinarys.BinaryId" />
                    <input type="hidden" asp-for="tblBinarys.Binary" />
                    <input type="hidden" asp-for="tblBinarys.CreateUser" />
                    <input type="hidden" asp-for="tblBinarys.Ddate" />
                    <input type="hidden" asp-for="tblBinarys.EditDate" />
                    <input type="hidden" asp-for="tblBinarys.EtCode" />
                    <input type="hidden" asp-for="tblBinarys.IsEdit" />
                    <input type="hidden" asp-for="tblBinarys.NoNeedScan" />
                    <input type="hidden" asp-for="tblBinarys.NoNeedScanUser" />
                    <input type="hidden" asp-for="tblBinarys.Number" />
                    <input type="hidden" asp-for="tblBinarys.RelatedBinarys" />
                    <div class="form-group">
                        <label for="usr">نام مدرک</label><span class="small"> (از لیست انتخاب کنید)</span>
                       
                        <select required name="Subject" class="browser-default custom-select form-control">
                            <option selected>@Model.tblBinarys.Subject</option>
                            @if (Model.DocumentsList.Count > 0)
                            {
                                foreach (var item in Model.DocumentsList)
                                {
                                    <option value="@item.DocumentName">@Html.DisplayFor(modelItem => item.DocumentName)</option>

                                }

                            }
                        </select>
                        <span asp-validation-for="tblBinarys.Subject" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label class="control-label">توضیحات</label>
                        <input asp-for="tblBinarys.Description" class="form-control" />
                        <span asp-validation-for="tblBinarys.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">فایل</label>
                        <input name="Binary" type="file" class="form-control" id="file">
                        <span asp-validation-for="tblBinarys.Binary" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="ذخیره" class="btn btn-primary" />&nbsp;|&nbsp;<a asp-page="./Index">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>  
    </div>
</div>
@section Footer{
    <div class="wizard-footer">
        <div class="clearfix"></div>
    </div>

}
@section Scripts{
    <!--   Core JS Files   -->
    <script src="/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>
    <script src="/js/register.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!--  Plugin for the Wizard -->
    <script src=" /js/demo.js" type="text/javascript"></script>
    <script src=" /js/paper-bootstrap-wizard.js" type="text/javascript"></script>

    <!--  More information about jquery.validate here: https://jqueryvalidation.org/	 -->
    <script src=" /js/jquery.validate.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            var first = $('#selectedTab').val();
            var mid = $('#selectedTab').val();
            if (first == "rquest-type") {
                $('#wizard').bootstrapWizard('show', 1);
            }
            else {
                $('#wizard').bootstrapWizard('show', 0);
            }
            switch (mid) {
                case "type":
                    $('#wizard').bootstrapWizard('show', 0);
                    break;

                case "facilities":
                    $('#wizard').bootstrapWizard('show', 1);
                    break;
                case "payment":
                    $('#wizard').bootstrapWizard('show', 2);
                    break;
                case "question":
                    $('#wizard').bootstrapWizard('show', 3);
                    break;
                case "upload":
                    $('#wizard').bootstrapWizard('show', 4);
                    break;
                case "description":
                    $('#wizard').bootstrapWizard('show', 5);
                    break;
                case "Verify1":
                    $('#wizard').bootstrapWizard('show', 6);
                    break;

            }

        });
    </script>
}
