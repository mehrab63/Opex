@page
@model Opex.Pages.Binarys.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<input type="hidden" id="selectedTab" value="upload" />
<div class="tab-pane" id="upload">
    <div class="col-md-12" style="margin-top:85px">
        <h2>حذف مدرک</h2>
        <h3>آیا از حذف این مدرک مطمعن هستید؟</h3>
        <div>
            <hr />
            <table class="table table-striped custab">
                <thead>
                    <tr>
                        <th class="text-right">نوع فایل</th>
                        <th class="text-right">عنوان مدرک</th>
                        <th class="text-right">توضیحات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.TblBinarys.FileFormat)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.TblBinarys.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.TblBinarys.Description)
                        </td>
                        <td>
                            <form method="post">
                                <input type="hidden" asp-for="TblBinarys.BinaryId" />
                                <input type="submit" value="حـذف" class="btn btn-danger" />|
                                <a asp-page="./Index"><span class="glyphicon glyphicon-circle-arrow-left"></span> بازگشت</a>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table> 
        </div>
    </div>
</div>


@section Footer{
    <div class="wizard-footer">
        <div class="pull-right">
            <input type='button' id="nextBtn" class='btn btn-next btn-fill btn-danger btn-wd hidden ' name='Next'
                   value='مرحله بعدی' />
            @if (User.Identity.IsAuthenticated)
            {
                <input type='button' id="nextBtn" class='btn btn-next btn-fill btn-danger btn-wd ' name='Next'
                       value='مرحله بعدی' />
                <input type='button' class='btn btn-finish btn-fill btn-danger btn-wd'
                       name='finish' value='تکمیل ثبت نام' />}
        </div>
        <div class="pull-left">
            <input type='button' class='btn btn-previous btn-default btn-wd' name='Previous'
                   value=' مرحله قبلی' />
        </div>
        <div class="clearfix"></div>
    </div>

}
@section Scripts{
    <!--   Core JS Files   -->
    <script src="/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="/js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>
    <script src="/js/register.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!--  Plugin for the Wizard -->
    <script src=" /js/demo.js" type="text/javascript"></script>
    <script src=" /js/paper-bootstrap-wizard.js" type="text/javascript"></script>

    <!--  More information about jquery.validate here: https://jqueryvalidation.org/	 -->
    <script src=" /js/jquery.validate.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            var first = $('#selectedTab').val();
            var mid = $('#selectedTab').val();
            if (first == "rquest-type") {
                $('#wizard').bootstrapWizard('show', 1);
            }
            else {
                $('#wizard').bootstrapWizard('show', 0);
            }
            switch (mid) {
                case "type":
                    $('#wizard').bootstrapWizard('show', 0);
                    break;

                case "facilities":
                    $('#wizard').bootstrapWizard('show', 1);
                    break;
                case "payment":
                    $('#wizard').bootstrapWizard('show', 2);
                    break;
                case "question":
                    $('#wizard').bootstrapWizard('show', 3);
                    break;
                case "upload":
                    $('#wizard').bootstrapWizard('show', 4);
                    break;
                case "description":
                    $('#wizard').bootstrapWizard('show', 5);
                    break;
                case "Verify1":
                    $('#wizard').bootstrapWizard('show', 6);
                    break;

            }

        });
    </script>
}